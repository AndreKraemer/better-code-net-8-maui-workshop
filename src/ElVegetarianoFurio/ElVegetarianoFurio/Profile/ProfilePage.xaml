<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ElVegetarianoFurio.Profile"
             x:Class="ElVegetarianoFurio.Profile.ProfilePage"
             x:DataType="vm:ProfileViewModel"
             Title="Mein Profil">
    <Grid>
        <VerticalStackLayout Padding="12" Spacing="6">
            <Label FontSize="Large" Text="Wie erreichen wir dich?"/>
            <Label Text="Name"/>
            <Entry/>
            <Label Text="StraÃŸe"/>
            <Entry/>
            <Label Text="Plz"/>
            <Entry Keyboard="Numeric" MaxLength="5"/>
            <Label Text="Ort"/>
            <Entry/>
            <Label Text="Telefon"/>
            <Entry Keyboard="Telephone"/>
            <Button Text="Speichern"/>
        </VerticalStackLayout>
        <Grid RowDefinitions="*,*" BackgroundColor="Black" Opacity="0.7" IsVisible="{Binding IsBusy}">
            <ActivityIndicator IsRunning="{Binding IsBusy}" VerticalOptions="End" HorizontalOptions="Center"  Color="DeepSkyBlue"/>
            <Label Grid.Row="1" Text="Lade ..." VerticalOptions="Start" HorizontalOptions="Center" TextColor="White" FontSize="Large"/>
        </Grid>
    </Grid>
</ContentPage>